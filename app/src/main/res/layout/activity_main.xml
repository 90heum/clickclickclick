<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:padding="16dp"
       android:weightSum="10"
       android:background="@drawable/clickback01">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/btn01"
            android:src="@drawable/btn01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="clickBtn" />

        <ImageView
            android:id="@+id/btn02"
            android:src="@drawable/btn02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="clickBtn"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/btn03"
            android:src="@drawable/btn03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="clickBtn"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/btn04"
            android:src="@drawable/btn04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="clickBtn"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/btn05"
            android:src="@drawable/btn05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="clickBtn"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/btn06"
            android:src="@drawable/btn06"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="clickBtn"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/btn07"
            android:src="@drawable/btn07"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="clickBtn"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/btn08"
            android:src="@drawable/btn08"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="clickBtn"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/btn09"
            android:src="@drawable/btn09"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="clickBtn"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/btn10"
            android:src="@drawable/btn10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="clickBtn"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/btn11"
            android:src="@drawable/btn11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="clickBtn"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/btn12"
            android:src="@drawable/btn12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="clickBtn"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="1"
        android:textColor="#ff0000"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:enabled="false"
        android:onClick="clickBtn"
        android:text="retry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="2.5">
       <com.google.android.gms.ads.AdView

           android:layout_marginTop="50dp"
           android:id="@+id/adView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           ads:adSize="BANNER"
           ads:adUnitId="ca-app-pub-3940256099942544/6300978111"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:onClick="clickBtn01"
        android:id="@+id/imageButton01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@drawable/clickback02"/>
</FrameLayout>